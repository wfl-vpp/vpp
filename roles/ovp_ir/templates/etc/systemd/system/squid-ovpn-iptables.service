[Unit]
Description=Iptables rules service for Squid and OpenVPN

[Service]
Type=oneshot
User=root
ExecStart=echo {{ iptables_path }} -I INPUT -p tcp --dport {{ is_server_port }} ! -s {{ inventory_hostname }} -j REJECT
ExecStop=echo {{ iptables_path }} -D INPUT -p tcp --dport {{ is_server_port }} ! -s {{ inventory_hostname }} -j REJECT
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
